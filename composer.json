{
  "name": "gosuperscript/monads",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Superscript\\Monads\\": "src/"
    },
    "files": [
      "src/Result/functions.php",
      "src/Option/functions.php",
      "src/Result/pipe.php",
      "src/Option/pipe.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Superscript\\Monads\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.3 || ^8.4 || ^8.5"
  },
  "require-dev": {
    "phpstan/phpstan": "^2.0",
    "pestphp/pest": "^2.34",
    "laravel/pint": "^1.17"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
